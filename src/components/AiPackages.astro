---
// props could be used later for localisation; hard-coded for now
const packages = [
  {
    id: 'plant',
    title: 'Konsultacja AI',
    tagline: 'Szybka diagnoza i pierwsze kroki',
    price: 'Od 1399 zł + VAT',
    badge: null,
    bullets: [
      'Ocena potencjału AI w Twojej firmie',
      'Możliwe obszary pierwszych wdrożeń',
      'Sugerowane narzędzia AI',
      '90 minut online, albo stacjonarnie',
      'Możliwość nagrania spotkania'
    ],
    calendly: 'https://calendly.com/kunkeconsulting-info/30min'
  },
  {
    id: 'grow',
    title: 'Szkolenie AI dla firm',
    tagline: 'Wprowadź AI, zyskaj przewagę',
    price: 'Od 6000 zł + VAT',
    bullets: [
      'Dwa szkolenia stacjonarne',
      'Praktyczne narzędzia AI',
      'Programy pilotażowe AI',
      'Etyka, Środowisko, Prawo AI',
      'Zgodność z AI Act i dobre praktyki',
      'AI Video, AI obrazy, AI dźwięk',
      'Inżynieria promptu',
      'Prezentacja PDF, Certyfikat'
    ],
    badge: 'Najpopularniejsze',
    badgeVariant: 'popular',
    calendly: 'https://calendly.com/kunkeconsulting-info/30min'
  },
  {
    id: 'flourish',
    title: 'Projekty AI',
    tagline: 'Stała współpraca',
    price: 'Cena ustalana indywidualnie',
    badge: null,
    bullets: [
      'Stała współpraca w obszarze AI',
      'Działania długofalowe',
      'Najbardziej ambitne projekty',
      'Szkolenia zespołów',
      'Wsparcie IT',
      'Wsparcie prawne i governance AI',
      'Konsulting AI'
    ],
    calendly: 'https://calendly.com/kunkeconsulting-info/30min'
  }
];
---
<section id="ai-packages">
  <h2>Szkolenia i doradztwo AI</h2>

  <div class="package-grid">
    {packages.map(pkg => (
      <article class="card {pkg.id}">
        {pkg.badge && <span class={`badge ${pkg.badgeVariant ?? ''}`}>{pkg.badge}</span>}

        <h3>{pkg.title}</h3>
        <p class="tagline">{pkg.tagline}</p>

        <div class="content">
          <ul>
            {pkg.bullets.map(b => <li>{b}</li>)}
          </ul>

          <div class="spacer" />
          <p class="price" set:html={pkg.price} />

          {pkg.calendly
            ? <a href="/ai-workshop" class="cta">{pkg.id === 'plant' || pkg.id === 'grow' ? 'Dowiedz się więcej' : 'Porozmawiajmy'}</a>
            : <a href="#contact" class="cta secondary">Skontaktuj się</a>}
        </div>
      </article>
    ))}
  </div>

  <p class="trust-note">
    <span class="trust-icon" aria-hidden="true">✓</span>
    Wszystkie nasze wdrożenia uwzględniają wymogi AI Act oraz dobre praktyki governance — od kodeksu dobrych praktyk,
    przez politykę AI, po rejestr narzędzi.
  </p>
</section>

<style>
  /* ----- layout ----- */
  #ai-packages { padding: 60px 20px; background:#fff; text-align:center; }
  .package-grid {
    display:flex; gap:24px; flex-wrap:nowrap; justify-content:center;
    align-items:stretch;
  }
  .card {
    flex:1 1 0; max-width:320px;
    background:#f8f8fa; border-radius:12px; padding:32px 24px;
    position:relative; box-shadow:0 4px 12px rgba(0,0,0,.06);
    border:1px solid #e4e4ea;
    display:flex; flex-direction:column; align-items:center;
  }
  .card.grow {
    background:#dde5f1;
    border-top:4px solid #d4af37;
    border-color:#cbd4e2;
    padding-top:44px;
    padding-bottom:44px;
    transform:translateY(-12px);
  }
  h3 { margin:8px 0 4px; }
  .tagline { font-size:.95rem; color:#555; margin-bottom:16px; }
  ul { text-align:left; padding-left:18px; margin:0 0 24px; }
  li { margin-bottom:6px; }
  .price { font-weight:700; margin-bottom:24px; }
  .price .old-price { text-decoration:line-through; color:#888; font-weight:400; }
  .cta {
    background:var(--color-primary); color:#fff; padding:12px 24px;
    border-radius:6px; text-decoration:none; font-weight:600;
    transition:background .3s ease;
  }
  .cta:hover { background:var(--color-secondary); }
  .cta.secondary { background:#ccc; }
  .badge {
    position:absolute; top:12px; left:50%;
    transform:translateX(-50%);
    background:var(--color-accent-blue); color:#fff; font-size:.72rem;
    padding:4px 10px; border-radius:999px; font-weight:600;
  }
  .badge.popular {
    background:#d4af37; color:#1f1f1f;
  }
  .trust-note {
    margin:24px auto 0;
    max-width:820px;
    font-size:.9rem;
    color:#666;
    line-height:1.5;
  }
  .trust-icon {
    margin-right:8px;
    color:#2a8c6a;
    font-weight:700;
  }
  /* mobile stack */
  @media(max-width:900px){
    .package-grid{flex-direction:column; flex-wrap:wrap;}
    .card.grow { order:-1; transform:none; }
  }
</style>
