---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Kunke Consulting: szkolenia i doradztwo z AI oraz Excela dla firm", ogImage } = Astro.props;

// Generate a random nonce for inline styles
const nonce = Math.random().toString(36).substring(2, 15);

// Content Security Policy
const csp = [
  "default-src 'self'",
  "script-src 'self' 'unsafe-inline'", // Astro needs inline scripts for hydration
  `style-src 'self' 'unsafe-inline' fonts.googleapis.com`, // Allow Google Fonts and inline styles
  "font-src 'self' fonts.gstatic.com",
  "connect-src 'self' formspree.io",
  "form-action 'self' formspree.io",
  "frame-ancestors 'none'", // Prevents clickjacking
  "base-uri 'self'",
  "object-src 'none'",
  "img-src 'self' data:",
  "media-src 'self'",
  "manifest-src 'self'"
].join('; ');
