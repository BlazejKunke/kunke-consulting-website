<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/images/Kunke_Favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/global.css" nonce={nonce} />
    <title>Team | ^Kunke Consulting</title>
    <meta name="description" content="Meet the team of experts at ^Kunke Consulting. We collaborate with the best specialists in AI, Excel, and business consulting." />
  </head>
  <body>

    <main>
      <section class="team-hero">
        <h1>My Team</h1>
        <p class="subtitle">I collaborate with the best experts in the industry</p>
      </section>

      <section class="team-grid">
        {teamMembers.map(member => (
          <TeamMember {...member} />
        ))}
      </section>
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-bottom">
            <div class="language-switcher">
                <a href="/zespol?lang=pl">Polski</a> | <a href="/en/team?lang=en">English</a>
            </div>
        </div>
    </footer>
    <style>
        .team-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 20px;
            text-align: center;
        }
        .team-hero h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            font-weight: 700;
        }
        .team-hero .subtitle {
            font-size: 1.3rem;
            max-width: 600px;
            margin: 0 auto;
        }
        .team-grid {
            padding: 60px 20px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            max-w: 1200px;
            margin: 0 auto;
        }
        footer {
            padding: 20px;
            text-align: center;
        }
    </style>
  </body>
</html>