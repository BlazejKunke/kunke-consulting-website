---
import BaseLayout from '../../components/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';
import AiPackages from '../../components/AiPackages.astro';
import Excel from '../../components/Excel.astro';
import Testimonials from '../../components/testimonials.astro';
import ExperienceSection from '../../components/ExperienceSection.astro';
import WorkshopSection from '../../components/WorkshopSection.astro';
import OMnie from '../../components/OMnie.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>

<style>
  .team-center {
    text-align: center;
  }
  .contact-text {
    text-align: center;
    margin-bottom: 10px;
  }
  .contact-center {
    text-align: center;
    margin-bottom: 15px;
  }
  .contact-email {
    color: #2c3e50;
    text-decoration: none;
  }
</style>

<section id="hero">
  <h1><span class="text-gradient">^Kunke Consulting</span></h1>
  <p>{t('hero.title')}</p>
  <a href="#ai-packages" class="cta-btn">{t('hero.cta')}</a>
</section>

<!-- Sections remain the same for now, will need translation -->
<ExperienceSection />
<WorkshopSection />
<AiPackages />
<Excel />
<Testimonials />
<section id="team-preview" class="team-preview-section">
  <div class="team-preview-content team-center">
    <h3>{t('team_preview.title')}</h3>
    <p set:html={t('team_preview.text')} />
    <a href="/en/team" class="cta-btn">{t('team_preview.cta')}</a>
  </div>
</section>
<OMnie />
<section id="faq" style="padding: 60px 20px; background: #f8f8fa;">
  <h2 style="text-align: center; margin-bottom: 50px;">{t('faq.title')}</h2>
  </section>
<section id="contact">
  <h2>{t('contact.title')}</h2>
  <p class="contact-text">{t('contact.text')}</p>
  <div class="contact-info contact-center">
    <p><strong>Email:</strong> <a href="mailto:info@kunkeconsulting.com" class="contact-email">info@kunkeconsulting.com</a></p>
  </div>
  <ContactForm />
</section>

</BaseLayout>