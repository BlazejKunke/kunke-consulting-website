  }
  .faq-question h3 {
    color: var(--color-primary);
    margin: 0;
    font-size: 1.2rem;
    flex-grow: 1;
  }
  .faq-icon {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-primary);
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 20px;
  }
  .faq-item[data-expanded="true"] .faq-icon {
