---
import { getCollection, getEntry } from "astro:content";

/* 1️⃣  Tell Astro all valid slugs ------------------------------------ */
export async function getStaticPaths() {
  const posts = await getCollection("blog");          // read every .md file
  return posts.map((post) => ({
    params: { slug: post.slug },                      // { slug: "excel-tips" }
  }));
}

/* 2️⃣  For each request, load that one post -------------------------- */
const { slug } = Astro.params;
const post = await getEntry("blog", slug as string);
if (!post) throw new Error(`Post "${slug}" not found`);

const nonce = Astro.locals.nonce;

const { Content } = await post.render();
