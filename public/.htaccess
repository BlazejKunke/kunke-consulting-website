# Apache Security Headers Configuration
# For Apache-based hosting (shared hosting, etc.)

<IfModule mod_headers.c>
    # Frame protection
    Header always set X-Frame-Options "DENY"
    
    # Enhanced Content Security Policy with frame-ancestors
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; connect-src 'self' formspree.io; form-action 'self' formspree.io; frame-ancestors 'none'; base-uri 'self'; object-src 'none'; img-src 'self' data:; media-src 'self'; manifest-src 'self'"
    
    # Additional security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # HTTPS enforcement (uncomment if using HTTPS)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Cache Control
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML files - no cache
    ExpiresByType text/html "access plus 0 seconds"
    
    # Images - 1 year
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS and JS - 1 year
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Fonts - 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
</IfModule>